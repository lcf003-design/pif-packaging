rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user is an admin by reading their profile
    // Note: In production, consider Custom Claims for better performance/cost
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // --- Collection Rules ---

    // USERS: Users can read/write their own profile; Admins can read all.
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      
      // Subcollections (Projects/Orders/RecentlyViewed) inherit ownership logic
      match /projects/{projectId} {
         allow read, write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      }
      match /recentlyViewed/{itemId} {
         allow read, write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      }
      match /orders/{orderId} {
         allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
         allow write: if isAdmin(); // Only admins/system can create orders
      }
    }

    // INQUIRIES: 
    // - Create: Public (unauthenticated leads) OR Authenticated
    // - Read: Owner (by email match) OR Admin
    // - Update: Admin only (Status changes)
    match /inquiries/{inquiryId} {
      allow create: if true; 
      allow read: if isAuthenticated() && 
        (resource.data.customer.email == request.auth.token.email || isAdmin());
      allow update: if isAdmin();
    }

    // MESSAGES (Contact Form):
    // - Create: Public
    // - Read: Admin only
    match /messages/{messageId} {
      allow create: if true;
      allow read: if isAdmin();
    }

    // PRODUCTS:
    // - Read: Public
    // - Write: Admin only
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
